<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="viewModel"
            type="com.example.calculator.ui.main.MainViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2EF"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{viewModel.result}"
        android:textSize="115sp"
        android:maxLines="2"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result">

        <Button
            style="@style/Button"
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:onClick="@{() -> viewModel.clear()}"/>

        <Button
            style="@style/Button"
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="back"
            android:onClick="@{() -> viewModel.back()}"/>

        <Button
            style="@style/Button"
            android:id="@+id/decimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="dec"/>

        <Button
            style="@style/Button"
            android:id="@+id/bin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="bin"/>

        <Button
            style="@style/Button"
            android:id="@+id/hex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="hex"/>

        <ImageButton
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_history_24" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/num"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:onClick="@{() -> viewModel.onKeyClicked('^')}"
                    android:text="Num"
                    android:textSize="24sp"
                    android:textColor="#DED3A6"/>

                <ImageButton
                    android:id="@+id/div"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/division_svgrepo_com"
                    android:onClick="@{()->viewModel.onKeyClicked('/') }"/>

                <ImageButton
                    android:id="@+id/mull"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/multiply_svgrepo_com"
                    android:onClick="@{()->viewModel.onKeyClicked('*') }"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/seven"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/seven"
                    android:onClick="@{()->viewModel.onKeyClicked('7') }"/>

                <ImageButton
                    android:id="@+id/eight"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/eight"
                    android:onClick="@{()->viewModel.onKeyClicked('8') }"/>

                <ImageButton
                    android:id="@+id/nine"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/nine"
                    android:onClick="@{()->viewModel.onKeyClicked('9') }"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/four"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/four"
                    android:onClick="@{()->viewModel.onKeyClicked('4') }"/>

                <ImageButton
                    android:id="@+id/five"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/five"
                    android:onClick="@{()->viewModel.onKeyClicked('5') }"/>

                <ImageButton
                    android:id="@+id/six"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/six"
                    android:onClick="@{()->viewModel.onKeyClicked('6') }"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/one"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/one"
                    android:onClick="@{()->viewModel.onKeyClicked('1') }"/>

                <ImageButton
                    android:id="@+id/two"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:src="@drawable/two"
                    android:onClick="@{()->viewModel.onKeyClicked('2') }"/>

                <ImageButton
                    android:id="@+id/three"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button"
                    android:layout_weight="1"
                    android:src="@drawable/three"
                    android:onClick="@{()->viewModel.onKeyClicked('3') }"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/zero"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/round_button"
                    android:src="@drawable/zero"
                    android:onClick="@{()->viewModel.onKeyClicked('0') }"/>

                <Button
                    android:id="@+id/dot"
                    style="@style/CalcButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="."
                    android:textSize="67sp"
                    android:textColor="#DED3A6"
                    android:onClick="@{()->viewModel.onKeyClicked('.') }"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/sub"
                style="@style/CalcButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:insetRight="4dp"
                android:background="@drawable/round_button"
                android:src="@drawable/minus_svgrepo_com"
                android:onClick="@{()->viewModel.onKeyClicked('-') }"/>

            <ImageButton
                android:id="@+id/add"
                style="@style/CalcButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:insetRight="4dp"
                android:background="@drawable/round_button"
                android:src="@drawable/plus_svgrepo_com"
                android:onClick="@{()->viewModel.onKeyClicked('+') }"/>

            <ImageButton
                android:id="@+id/ent"
                style="@style/CalcButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:insetRight="4dp"
                android:background="@drawable/round_button"
                android:src="@drawable/equal"
                android:onClick="@{()->viewModel.endOfCalculation()}"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>